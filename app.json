{
  "expo": {
    "name": "Recipe App",
    "slug": "recipe_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/playstore.png",
    "splash": {
      "image": "./assets/icons/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
